{
  env: {
    node: true,
    es6: true
  },
  globals: {
    jest: false,
    describe: false,
    pit: false,
    it: false,
    expect: false,
    beforeEach: false,
    jasmine: false
  },
  rules: {
    "no-throw-literal": 1,
    "strict": [2, "never"],
    "semi": [2, "never"],
    "quotes": [2, "single"],
    "no-var": 1,
    "eol-last": 1,
    "no-undef": "error",
    "no-new-require": 1,
    "no-sync": 1,
    "no-mixed-requires": [1, false]
  }
}

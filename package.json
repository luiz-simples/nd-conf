{
  "name": "nd-conf",
  "version": "1.0.6",
  "description": "Node Configuration Server: Actions via JSON",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/luiz-simples/nd-conf.git"
  },
  "author": "Luiz Amorim <luiz.simples@gmail.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/luiz-simples/nd-conf/issues"
  },
  "homepage": "https://github.com/luiz-simples/nd-conf#readme",
  "devDependencies": {
    "eslint": "^4.17.0",
    "eslint-config-rackt": "^1.1.1",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^22.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/tests/**/*Test.js?(x)"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^tests/(.*)$": "<rootDir>/tests/$1"
    },
    "collectCoverage": false,
    "moduleFileExtensions": [
      "js"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "unmockedModulePathPatterns": [
      "node_modules/"
    ]
  }
}
